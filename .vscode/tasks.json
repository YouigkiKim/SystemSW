{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build PB3/pb3.c",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${workspaceFolder}/PB3/pb3.c",
                "-o",
                "${workspaceFolder}/pb3"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
} 